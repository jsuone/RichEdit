<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BacklogCompileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/backlog_compile_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            />
        <ImageButton
            android:id="@+id/backlog_compile_gou"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/gou"
            />
    </LinearLayout>
<com.example.alarmclock.BacklogSetting
    android:id="@+id/backlog_setting_compile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</LinearLayout>